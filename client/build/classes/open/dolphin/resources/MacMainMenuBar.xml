<?xml version="1.0" encoding="UTF-8" ?>

<menubar toolBar="Yes" project="open.dolphin" version="1.0">
    
    <menu text="ファイル" name="file">
        
        <actionItem name="newKarte">
            <text>新規カルテ...</text>
            <icon>new_24.gif</icon>
            <accelerator>VK_N</accelerator>
            <toolTip>新規カルテ作成</toolTip>
        </actionItem>
        
 
        
        <actionItem name="openKarte">
            <text>カルテを開く</text>
            <accelerator>VK_O</accelerator>
            <toolTip>カルテを開く</toolTip>
        </actionItem>
        
        <menuItem>
            <text>-</text>
        </menuItem>
        
        <actionItem name="processWindowClosing">
            <text>閉じる</text>
            <accelerator>VK_W</accelerator>
            <toolTip>ウインドウを閉じる</toolTip>
            <enabled>true</enabled>
        </actionItem>              
        
        <actionItem name="save">
            <text>保存...</text>
            <icon>save_24.gif</icon>
            <accelerator>VK_S</accelerator>
            <toolTip>保存</toolTip>
        </actionItem> 
        
        <menuItem>
            <text>-</text>
        </menuItem>     
        
        <actionItem name="delete">
            <text>削除...</text>
            <toolTip>削除</toolTip>
        </actionItem> 
        
        <menuItem>
            <text>-</text>
        </menuItem>   
        
        <actionItem name="printerSetup">
            <text>ページ設定...</text>
            <accelerator>VK_P</accelerator>
            <shiftMask>true</shiftMask>
            <toolTip>ページ設定</toolTip>
            <enabled>true</enabled>
        </actionItem>         
        
        <actionItem name="print">
            <text>プリント...</text>
            <icon>print_24.gif</icon>
            <accelerator>VK_P</accelerator>
            <toolTip>印刷</toolTip>
        </actionItem>        
        
    </menu>
    
    <menu text="編集" name="edit">
        

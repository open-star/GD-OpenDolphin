            <toolTip>コピー</toolTip>
        </actionItem>              
        
        <actionItem name="paste">
            <text>ペースト</text>
            <icon>paste_24.gif</icon>
            <accelerator>VK_V</accelerator>
            <toolTip>ペースト</toolTip>
        </actionItem>        
        
